@model sql_exercise_scoring.Models.Coder

@{
    ViewData["Title"] = "Chi tiết - Quản lý tài khoản Coder";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="mt-2">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex">
            <form action="@Url.Action("Edit", "CodersAdmin", new { area = "Admin", id = Model.CoderId })" method="get" style="display: inline;">
                <button type="submit" class="btn btn-sm btn-primary me-1 font-lg">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </button>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Cột trái -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label font-lg">Tên Coder</label>
                <input type="text" class="form-control font-lg" value="@Model.CoderName" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label font-lg">Email</label>
                <input type="email" class="form-control font-lg" value="@Model.CoderEmail" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label font-lg">Giới tính</label>
                <input type="text" class="form-control font-lg" 
                       value="@(Model.Gender == true ? "Nam" : Model.Gender == false ? "Nữ" : "Không xác định")" 
                       readonly>
            </div>
            <div class="mb-3">
                <label class="form-label font-lg">Ngày tạo</label>
                <input type="text" class="form-control font-lg"
                       value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")" readonly>
            </div>
        </div>

        <!-- Cột phải -->
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label font-lg">Quyền Admin</label>
                <input type="text" class="form-control font-lg" value="@(Model.AdminCoder ? "Có" : "Không")" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label font-lg">Quyền tạo Contest</label>
                <input type="text" class="form-control font-lg" value="@(Model.ContestSetter ? "Có" : "Không")" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label font-lg">Nhận email thông báo</label>
                <input type="text" class="form-control font-lg" value="@(Model.ReceiveEmail == true ? "Có" : "Không")" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label font-lg">Cập nhật lần cuối</label>
                <input type="text" class="form-control font-lg" 
                       value="@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")" readonly>
            </div>
        </div>

        <div class="d-flex justify-content-end align-items-center mb-4">
            <form action="@Url.Action("Delete", "CodersAdmin", new { area = "Admin", id = Model.CoderId })" method="post" style="display: inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-danger font-lg"
                    onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                    <i class="fas fa-trash-alt"></i> Xóa tài khoản
                </button>
            </form>
        </div>
    </div>
</div>
