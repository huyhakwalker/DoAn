@model ProCoder.Models.Theme
@{
    ViewData["Title"] = "Tạo mới dạng bài";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-body">
            <form action="@Url.Action("Create", "ThemesAdmin", new { area = "Admin" })" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="ThemeName" class="form-label">Tên dạng bài</label>
                    <input type="text" class="form-control" id="ThemeName" name="ThemeName" required
                           placeholder="Nhập tên dạng bài" />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ThemeName)</span>
                </div>

                <div class="form-group mb-3">
                    <label for="ThemeOrder" class="form-label">Thứ tự hiển thị</label>
                    <input type="number" class="form-control" id="ThemeOrder" name="ThemeOrder" required
                           placeholder="Nhập thứ tự hiển thị" />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.ThemeOrder)</span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Lưu dạng bài
                    </button>
                    <a href="@Url.Action("Index", "ThemesAdmin", new { area = "Admin" })" class="btn btn-secondary btn-lg ms-2">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
