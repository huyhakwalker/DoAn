@model IEnumerable<ProCoder.Models.Contest>

@{
    ViewData["Title"] = "Quản lý cuộc thi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    int pageSize = 10;
    int currentPage = Context.Request.Query["page"].ToString() != "" ?
        int.Parse(Context.Request.Query["page"]) : 1;
    string searchString = Context.Request.Query["search"].ToString()?.Trim().ToLower();

    var query = Model?.AsQueryable() ?? Enumerable.Empty<ProCoder.Models.Contest>().AsQueryable();

    if (!string.IsNullOrEmpty(searchString))
    {
        query = query.Where(c => c.ContestName.ToLower().Contains(searchString)
                             || c.Coder.CoderName.ToLower().Contains(searchString));
    }

    int totalItems = query.Count();
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);

    var items = query
        .Skip((currentPage - 1) * pageSize)
        .Take(pageSize)
        .ToList();

    int index = (currentPage - 1) * pageSize + 1;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid mt-2">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="@Url.Action("Create", "ContestsAdmin", new { area = "Admin" })" class="btn btn-success">
            <i class="fas fa-plus"></i> Thêm cuộc thi
        </a>

        <form method="get" action="" class="d-flex gap-2">
            <div class="input-group" style="width: 300px;">
                <input type="text" class="form-control" name="search"
                       value="@Context.Request.Query["search"]"
                       placeholder="Tìm theo tên cuộc thi hoặc người tạo...">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
                @if (!string.IsNullOrEmpty(searchString))
                {
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                    </a>
                }
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(searchString))
    {
        <div class="alert alert-info">
            Kết quả tìm kiếm cho: <strong>@Context.Request.Query["search"]</strong>
            <span class="ms-2">(@totalItems kết quả)</span>
        </div>
    }

    <div class="table-responsive zoom-table">
        <table class="table table-hover table-bordered align-middle zoom-table">
            <thead class="bg-gradient-primary text-white">
                <tr>
                    <th scope="col" class="text-center">STT</th>
                    <th scope="col">Tên cuộc thi</th>
                    <th scope="col">Mô tả</th>
                    <th scope="col" class="text-center">Người tạo</th>
                    <th scope="col" class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (!items.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center">Không có dữ liệu.</td>
                    </tr>
                }
                else
                {
                    foreach (var contest in items)
                    {
                        <tr class="@(index % 2 == 0 ? "table-light" : "table-secondary")">
                            <td class="text-center">@index</td>
                            <td class="text-start">@contest.ContestName</td>
                            <td class="text-start">@contest.ContestDescription</td>
                            <td class="text-center">@contest.Coder.CoderName</td>
                            <td class="text-center">
                                <form action="@Url.Action("Edit", "ContestsAdmin", new { area = "Admin", id = contest.ContestId })" method="get" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-primary me-1 font-lg">
                                        <i class="fas fa-edit"></i> Chỉnh sửa
                                    </button>
                                </form>
                                <form action="@Url.Action("Detail", "ContestsAdmin", new { area = "Admin", id = contest.ContestId })" method="get" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-info me-1 font-lg">
                                        <i class="fas fa-info-circle"></i> Chi tiết
                                    </button>
                                </form>
                                <form action="@Url.Action("Delete", "ContestsAdmin", new { area = "Admin", id = contest.ContestId })" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger font-lg"
                                            onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, search = searchString })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, search = searchString })">@i</a>
                    </li>
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, search = searchString })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<style>
    .pagination {
        margin-top: 20px;
    }

    .page-link {
        color: #007bff;
        background-color: #fff;
        border: 1px solid #dee2e6;
        padding: 0.5rem 0.75rem;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }

    .page-link:hover {
        color: #0056b3;
        background-color: #e9ecef;
        border-color: #dee2e6;
    }
</style>
