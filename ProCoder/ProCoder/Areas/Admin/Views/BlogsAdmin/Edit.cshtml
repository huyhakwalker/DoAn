@model ProCoder.Models.Blog

@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa bài viết</h6>
        </div>
        <div class="card-body">
            <form action="@Url.Action("Edit", "BlogsAdmin", new { area = "Admin", id = Model.BlogId })" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="BlogId" value="@Model.BlogId" />
                <input type="hidden" name="BlogDate" value="@Model.BlogDate.ToString("yyyy-MM-ddTHH:mm:ss")" />

                <div class="form-group mb-3">
                    <label for="BlogTitle" class="form-label">Tiêu đề bài viết</label>
                    <input type="text" class="form-control" id="BlogTitle" name="BlogTitle"
                           value="@Model.BlogTitle" required />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.BlogTitle)</span>
                </div>

                <div class="form-group mb-3">
                    <label for="BlogContent" class="form-label">Nội dung</label>
                    <textarea class="form-control" id="BlogContent" name="BlogContent" 
                              rows="10">@Model.BlogContent</textarea>
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.BlogContent)</span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="CoderId" class="form-label">Người viết</label>
                            <input type="number" class="form-control" id="CoderId" name="CoderId" 
                                   value="@Model.CoderId" readonly />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="Published" class="form-label">Công khai</label>
                            <select class="form-select" id="Published" name="Published">
                                <option value="false" @(!Model.Published ? "selected" : "")>Không</option>
                                <option value="true" @(Model.Published ? "selected" : "")>Có</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="PinHome" class="form-label">Ghim lên trang chủ</label>
                            <select class="form-select" id="PinHome" name="PinHome">
                                <option value="false" @(!Model.PinHome ? "selected" : "")>Không</option>
                                <option value="true" @(Model.PinHome ? "selected" : "")>Có</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 