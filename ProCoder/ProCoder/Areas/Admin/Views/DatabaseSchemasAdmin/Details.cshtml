@model ProCoder.Models.DatabaseSchema

@{
    ViewData["Title"] = "Chi tiết schema";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết schema</h6>
            <div class="d-flex gap-2">
                <form action="@Url.Action("Edit", "DatabaseSchemasAdmin", new { area = "Admin", id = Model.DatabaseSchemaId })" method="get" style="display: inline;">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Chỉnh sửa
                    </button>
                </form>
                <button type="button" class="btn btn-danger" onclick="confirmDelete(@Model.DatabaseSchemaId)">
                    <i class="fas fa-trash"></i> Xóa
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên schema</label>
                        <p class="form-control">@Model.SchemaName</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Định nghĩa Schema:</label>
                        <div class="border p-3 bg-light">
                            <pre><code>@Model.SchemaDefinitionPath</code></pre>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả</label>
                        <div class="form-control" style="height: auto;">@(Model.Description ?? "Không có mô tả")</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày tạo</label>
                        <p class="form-control">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Người tạo</label>
                        <p class="form-control">@Model.Coder.CoderName</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Cập nhật lần cuối</label>
                        <p class="form-control">@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm:ss")</p>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="font-weight-bold">Danh sách InitData</h5>
                <a href="@Url.Action("Create", "InitDataAdmin", new { area = "Admin", databaseSchemaId = Model.DatabaseSchemaId })" class="btn btn-success mb-2">
                    <i class="fas fa-plus"></i> Thêm InitData
                </a>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th>ID</th>
                                <th>Tên dữ liệu</th>
                                <th>Nội dung dữ liệu</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.InitData.Any())
                            {
                                @foreach (var initData in Model.InitData)
                                {
                                    <tr>
                                        <td>@initData.InitDataId</td>
                                        <td>@initData.DataName</td>
                                        <td><pre>@initData.Description</pre></td>
                                        <td>
                                            <a href="@Url.Action("Edit", "InitDataAdmin", new { area = "Admin", id = initData.InitDataId })" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            <a href="@Url.Action("Details", "InitDataAdmin", new { area = "Admin", id = initData.InitDataId })" class="btn btn-info btn-sm">
                                                <i class="fas fa-info-circle"></i> Chi tiết
                                            </a>
                                            <form action="@Url.Action("Delete", "InitDataAdmin", new { area = "Admin", id = initData.InitDataId })" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                                                    <i class="fas fa-trash-alt"></i> Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center">Không có InitData nào cho schema này.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Bạn có chắc chắn muốn xóa schema này?')) {
                fetch(`/Admin/DatabaseSchemasAdmin/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                }).then(response => {
                    if (response.ok) {
                        window.location.href = '/Admin/DatabaseSchemasAdmin';
                    }
                });
            }
        }
    </script>
} 