@model ProCoder.Models.DatabaseSchema

@{
    ViewData["Title"] = "Chỉnh sửa Database Schema";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-body">
            <form action="@Url.Action("Edit", "DatabaseSchemasAdmin", new { area = "Admin", id = Model.DatabaseSchemaId })" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="DatabaseSchemaId" value="@Model.DatabaseSchemaId" />
                <input type="hidden" name="CoderId" value="@Model.CoderId" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="SchemaName" class="form-label">Tên Schema</label>
                            <input type="text" class="form-control" id="SchemaName" name="SchemaName"
                                   value="@Model.SchemaName" required />
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.SchemaName)</span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="Description" class="form-label">Mô tả Schema</label>
                            <textarea class="form-control" id="Description" name="Description"
                                      rows="4">@Model.Description</textarea>
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Description)</span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label for="SchemaDefinition" class="form-label">Định nghĩa Schema (SQL)</label>
                            <textarea class="form-control" id="SchemaDefinition" name="SchemaDefinition"
                                      rows="15" style="font-family: 'Courier New', monospace;" required>@ViewBag.SchemaDefinitionContent</textarea>
                            <small class="form-text text-muted">
                                Lưu ý: Thay đổi định nghĩa schema có thể ảnh hưởng đến các bài tập đã tạo
                            </small>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}