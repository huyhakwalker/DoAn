@model ProCoder.Models.TestCase

@{
    ViewData["Title"] = "Chỉnh sửa Test Case";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                Chỉnh sửa Test Case cho <strong>@ViewBag.Problem?.ProblemCode</strong> - @ViewBag.Problem?.ProblemName
            </h6>
            <a asp-area="Admin" asp-controller="ProblemsAdmin" asp-action="Details" asp-route-id="@Model.ProblemId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="card-body">
            <form asp-area="Admin" asp-controller="TestCasesAdmin" asp-action="Edit" asp-route-id="@Model.TestCaseId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="TestCaseId" />
                <input type="hidden" asp-for="ProblemId" />

                <div class="form-group mb-3">
                    <label asp-for="InitDataId" class="form-label">Dữ liệu mẫu</label>
                    <select class="form-select" asp-for="InitDataId">
                        <option value="">-- Không sử dụng dữ liệu mẫu --</option>
                        @if (ViewBag.InitDatas != null)
                        {
                            @foreach (var item in ViewBag.InitDatas)
                            {
                                <option value="@item.Value" selected="@(Model.InitDataId == int.Parse(item.Value.ToString()))">@item.Text</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="InitDataId" class="text-danger"></span>
                    <small class="form-text text-muted">Chọn bộ dữ liệu mẫu sẽ được sử dụng cho test case này.</small>
                </div>

                <div class="mb-3">
                    <label asp-for="AnswerResultPath" class="form-label">Kết quả mong đợi</label>
                    <textarea asp-for="AnswerResultPath" class="form-control" rows="6">@Model.AnswerResultPath</textarea>
                    <span asp-validation-for="AnswerResultPath" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="OrderNumber" class="form-label">Thứ tự</label>
                            <input type="number" class="form-control" asp-for="OrderNumber" min="1" required />
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label asp-for="Score" class="form-label">Điểm</label>
                            <input type="number" class="form-control" asp-for="Score" min="0" required />
                            <span asp-validation-for="Score" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3 mt-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" asp-for="IsHidden">
                                <label class="form-check-label" asp-for="IsHidden">
                                    Ẩn test case
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}