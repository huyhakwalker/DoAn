@model IEnumerable<ProCoder.Models.TestCase>

@{
    ViewData["Title"] = "Test Cases cho " + ViewBag.Problem?.ProblemName;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container-fluid mt-2">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Test Cases cho <strong>@ViewBag.Problem?.ProblemCode</strong> - @ViewBag.Problem?.ProblemName</h6>
            <div>
                <a href="@Url.Action("CreateForProblem", "TestCasesAdmin", new { area = "Admin", problemId = ViewBag.Problem?.ProblemId })" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm Test Case
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Cấu trúc database:</h5>
                        <pre class="bg-light p-3 rounded"><code>@ViewBag.Problem?.DatabaseSchema.SchemaDefinition</code></pre>
                    </div>
                    <div class="col-md-6">
                        <h5>Bộ dữ liệu mẫu có thể sử dụng:</h5>
                        @if (Model != null && Model.Any(tc => tc.SchemaData != null))
                        {
                            <div class="list-group">
                                @foreach (var schemaData in Model.Where(tc => tc.SchemaData != null).Select(tc => tc.SchemaData).Distinct())
                                {
                                    <div class="list-group-item">
                                        <h6 class="mb-1">@schemaData.DataName</h6>
                                        @if (!string.IsNullOrEmpty(schemaData.Description))
                                        {
                                            <p class="mb-1 text-muted">@schemaData.Description</p>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">Chưa có bộ dữ liệu mẫu nào được sử dụng.</div>
                        }
                    </div>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>STT</th>
                                <th>Thứ tự</th>
                                <th>Dữ liệu mẫu</th>
                                <th>Câu truy vấn</th>
                                <th>Kết quả mong đợi</th>
                                <th>Ẩn?</th>
                                <th>Điểm</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var testCase in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@testCase.OrderNumber</td>
                                        <td>
                                            @if (testCase.SchemaData != null)
                                            {
                                                <div>
                                                    <strong class="badge bg-info">@testCase.SchemaData.DataName</strong>
                                                    @if (!string.IsNullOrEmpty(testCase.SchemaData.Description))
                                                    {
                                                        <div class="small text-muted mt-1">@testCase.SchemaData.Description</div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Không sử dụng</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="text-wrap" style="max-width: 250px;">
                                                <pre class="mb-0" style="font-size: 0.85rem;">@testCase.TestQuery</pre>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-wrap" style="max-width: 250px;">
                                                <pre class="mb-0" style="font-size: 0.85rem;">@testCase.ExpectedResult</pre>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            @if (testCase.IsHidden)
                                            {
                                                <span class="badge bg-warning">Ẩn</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Hiện</span>
                                            }
                                        </td>
                                        <td class="text-center">@testCase.Score</td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="@Url.Action("Details", "TestCasesAdmin", new { area = "Admin", id = testCase.TestCaseId })" class="btn btn-info btn-sm">
                                                    <i class="fas fa-info-circle"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", "TestCasesAdmin", new { area = "Admin", id = testCase.TestCaseId })" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@testCase.TestCaseId)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    Chưa có test case nào cho bài tập này.
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa test case này không?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" action="" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            $('#deleteForm').attr('action', `/Admin/TestCasesAdmin/Delete/${id}`);
            $('#deleteModal').modal('show');
        }
    </script>
} 