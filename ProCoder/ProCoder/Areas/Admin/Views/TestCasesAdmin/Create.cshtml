@model ProCoder.Models.TestCase

@{
    ViewData["Title"] = "Thêm Test Case cho " + ViewBag.Problem?.ProblemName;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    Thêm Test Case cho <strong>@ViewBag.Problem?.ProblemCode</strong> - @ViewBag.Problem?.ProblemName
                </h6>
                <a asp-area="Admin" asp-controller="ProblemsAdmin" asp-action="Details" asp-route-id="@Model.ProblemId" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProblemId" />

                <div class="form-group mb-3">
                    <label asp-for="InitDataId" class="form-label">Dữ liệu mẫu</label>
                    <select asp-for="InitDataId" class="form-select">
                        <option value="">-- Không sử dụng dữ liệu mẫu --</option>
                        @foreach (var item in ViewBag.InitDatas)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="InitDataId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AnswerResult" class="form-label">Kết quả mong đợi</label>
                    <textarea asp-for="AnswerResult" class="form-control" rows="5" required></textarea>
                    <span asp-validation-for="AnswerResult" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="OrderNumber" class="form-label">Thứ tự</label>
                            <input asp-for="OrderNumber" class="form-control" type="number" min="1" required />
                            <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Score" class="form-label">Điểm</label>
                            <input asp-for="Score" class="form-control" type="number" min="0" required />
                            <span asp-validation-for="Score" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsHidden" class="form-check-input" type="checkbox" />
                    <label asp-for="IsHidden" class="form-check-label">Ẩn test case</label>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu test case
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 