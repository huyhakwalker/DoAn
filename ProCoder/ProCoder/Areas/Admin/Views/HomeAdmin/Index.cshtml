@model ProCoder.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Thống kê hệ thống";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-2">
    <!-- Tiêu đề báo cáo -->
    <div class="text-center mb-2">
        <h2>Báo cáo thống kê hệ thống</h2>
        <p class="lead">Theo dõi người dùng, bài tập và kết quả làm bài</p>
    </div>

    <!-- Tổng số liệu -->
    <div class="row d-flex justify-content-center">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Tổng người dùng</h5>
                    <p class="fst-italic text-small">đã đăng ký</p>
                    <p class="card-text display-4">@Model.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Tổng bài tập</h5>
                    <p class="fst-italic text-small">đã tạo</p>
                    <p class="card-text display-4">@Model.TotalProblems</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Bài nộp</h5>
                    <p class="fst-italic text-small">trong tháng</p>
                    <p class="card-text display-4">@Model.MonthlySubmissions</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ thống kê -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Phân bố vai trò người dùng</h5>
                    <canvas id="roleChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ vai trò người dùng
        new Chart(document.getElementById('roleChart').getContext('2d'), {
            type: 'pie',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.RoleDistribution.Select(x => $"'{x.Role}'")))],
                datasets: [{
                    data: [@string.Join(",", Model.RoleDistribution.Select(x => x.Count))],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(75, 192, 192, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
