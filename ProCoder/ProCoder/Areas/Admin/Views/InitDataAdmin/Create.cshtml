@model ProCoder.Models.InitData

@{
    ViewData["Title"] = "Tạo mới InitData";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            }
            <form asp-area="Admin" asp-controller="InitDataAdmin" asp-action="Create" method="post">
                <input type="hidden" name="DatabaseSchemaId" value="@Model.DatabaseSchemaId" />
                <input type="hidden" name="DataContentPath" value="placeholder" />
                <div class="form-group mb-3">
                    <label for="DataName" class="form-label">Tên dữ liệu</label>
                    <input type="text" id="DataName" name="DataName" 
                           class="form-control" required 
                           placeholder="Nhập tên dữ liệu" />
                </div>

                <div class="form-group mb-3">
                    <label for="DataContent" class="form-label">Nội dung dữ liệu</label>
                    <textarea id="DataContent" name="DataContent" 
                            class="form-control" rows="10" required
                            placeholder="Nhập nội dung dữ liệu" style="font-family: 'Courier New', monospace;"></textarea>
                    <span class="text-danger">@Html.ValidationMessage("DataContent")</span>
                </div>

                <div class="form-group mb-3">
                    <label for="Description" class="form-label">Mô tả</label>
                    <textarea id="Description" name="Description" 
                            class="form-control" rows="4"
                            placeholder="Mô tả dữ liệu (nếu có)"></textarea>
                </div>

                @Html.AntiForgeryToken()

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Tạo InitData
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 