@model ProCoder.Models.InitData

@{
    ViewData["Title"] = "Chỉnh sửa InitData";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="card shadow-sm p-4">
        <div class="card-body">
            <form action="@Url.Action("Edit", "InitDataAdmin", new { area = "Admin", id = Model.InitDataId })" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="InitDataId" value="@Model.InitDataId" />
                <input type="hidden" name="DatabaseSchemaId" value="@Model.DatabaseSchemaId" />
                <input type="hidden" name="DataContentPath" value="@Model.DataContentPath" />

                <div class="form-group mb-3">
                    <label for="DataName" class="form-label">Tên dữ liệu</label>
                    <input type="text" class="form-control" id="DataName" name="DataName"
                           value="@Model.DataName" required />
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.DataName)</span>
                </div>

                <div class="mb-3">
                    <label for="DataContent" class="form-label">Nội dung dữ liệu</label>
                    <textarea class="form-control" id="DataContent" name="DataContent" 
                              rows="10" style="font-family: 'Courier New', monospace;" required>@ViewBag.DataContent</textarea>
                    <span class="text-danger">@Html.ValidationMessage("DataContent")</span>
                    <small class="form-text text-muted">
                        Đường dẫn file: @Model.DataContentPath
                    </small>
                </div>

                <div class="form-group mb-3">
                    <label for="Description" class="form-label">Mô tả</label>
                    <textarea class="form-control" id="Description" name="Description"
                            rows="4">@Model.Description</textarea>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("Details", "InitDataAdmin", new { area = "Admin", id = Model.InitDataId })" class="btn btn-secondary btn-lg ml-2">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 