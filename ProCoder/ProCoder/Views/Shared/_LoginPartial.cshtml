@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user"></i> @User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">
                            <i class="fas fa-cogs me-2"></i>Quản trị
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="@Url.Action("Debug", "Solved")">
                            <i class="fas fa-bug me-2"></i>Bài Đã Giải
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                }
                <li>
                    <a class="dropdown-item" href="@Url.Action("Profile", "Coders")">
                        <i class="fas fa-id-card me-2"></i>Hồ sơ
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form method="post" action="@Url.Action("Logout", "Home")">
                        <button type="submit" class="dropdown-item">
                            <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Login", "Home")">
                <i class="fas fa-sign-in-alt"></i> Đăng nhập
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Register", "Home")">
                <i class="fas fa-user-plus"></i> Đăng ký
            </a>
        </li>
    </ul>
}

<style>
    .dropdown-item {
        padding: 0.5rem 1rem;
    }
    
    .dropdown-item i {
        width: 20px;
    }
    
    .dropdown-item:hover {
        background-color: #f8f9fa;
    }
    
    .dropdown-menu {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style> 